<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:divider="?android:attr/dividerHorizontal"
  	android:gravity="left"  
  	android:id="@+id/product_detail_container"
  	android:background="#ffffff"
  	android:padding="10dp"	
>  

       <LinearLayout
	       android:layout_width="match_parent"
	       android:layout_height="0dp"       
	       android:orientation="horizontal"
	       android:layout_weight="4"
       >
       
		
			<ImageView
	           android:id="@+id/prodcut_detail_image"
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="1" 
	           android:contentDescription="@string/productOverview_image"
	           android:background="@drawable/back"
	           android:padding="1px"/>           
	           
	           
	       <LinearLayout
		       android:layout_width="0dp"
		       android:layout_height="match_parent"       
		       android:orientation="vertical"
		       android:layout_weight="1"
		       android:paddingLeft="5dp"
	       >

	           <TextView
	               android:id="@+id/prodcut_detail_name"
	               android:layout_width="match_parent"
	               android:layout_height="0dp"
	               android:layout_weight="1"
	               android:textColor="#CC3333"
	               android:textSize="30dp"
	               android:textStyle="bold"
	               android:gravity="center|left"
	               />
	           
	           <LinearLayout
			       android:layout_width="match_parent"
			       android:layout_height="0dp"       
			       android:orientation="vertical"
			       android:layout_weight="1"
			       android:gravity="top"			       			      
	       		>
	       		
		               <LinearLayout
				       android:layout_width="match_parent"
				       android:layout_height="wrap_content"       
				       android:orientation="vertical"			       
				       android:gravity="top"			       			      
		       		>
		       		
			               <LinearLayout
					       android:layout_width="match_parent"
					       android:layout_height="0dp"       
					       android:orientation="horizontal"
					       android:layout_weight="1"
					       android:gravity="bottom|left"			       			      
			       			>
			       		
				               <TextView		               
					               android:layout_width="wrap_content"
					               android:layout_height="match_parent"		               
					               android:text="@string/product_detail_price_from"
					               android:textSize="25dp"
					               android:gravity="bottom|left"
				               />
				               <TextView
					               android:id="@+id/prodcut_detail_price_from"
					               android:layout_width="wrap_content"
					               android:layout_height="match_parent"	
					               android:textSize="25dp"
				               		android:textStyle="bold"
				               		android:gravity="bottom|left"	               		               
				               />
			               </LinearLayout>
			               
			               <LinearLayout
					       android:layout_width="match_parent"
					       android:layout_height="0dp"       
					       android:orientation="horizontal"
					       android:layout_weight="1"	
					       android:gravity="top|right"			               		      
			       			>
				               <TextView		               
					               android:layout_width="wrap_content"
					               android:layout_height="match_parent"		               
					               android:text="@string/product_detail_price_to"
					               android:textSize="25dp"
					               android:gravity="top|right"
				               />
				               <TextView
					               android:id="@+id/prodcut_detail_price_to"
					               android:layout_width="wrap_content"
					               android:layout_height="match_parent"
					               android:textSize="25dp"
				               		android:textStyle="bold"
				               		android:gravity="top|right"		               		               
				               />
				               <TextView		               
					               android:layout_width="wrap_content"
					               android:layout_height="match_parent"		               
					               android:text="@string/currency"
					               android:textSize="25dp"
					               android:gravity="top|right"
				               />
				           </LinearLayout>
		               
		       		</LinearLayout>
	       		
	       		</LinearLayout>
	           
	           
       		</LinearLayout>
		
		
       </LinearLayout>              
       
       <TextView
            android:id="@+id/prodcut_detail_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingTop="5dp"			
			android:scrollbars="vertical" 			                     
            />
       

</LinearLayout>